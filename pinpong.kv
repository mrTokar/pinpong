#:kivy 1.0.9

<PinPongBall>:
    size: 50, 50
    canvas: 
        Ellipse:
            pos: self.pos
            size: self.size

<PinPongRacket>:
    size: 20, 150
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size

<PinPongGame>:
    ball: pinpong_ball
    pc_racket: left_racket
    player_racket: right_racket

    canvas:
        Rectangle:
        #slash place
            pos: self.center_x -5, 0
            size: 10, self.height

    Label:
        #score left player
        font_size: 70
        center_x: root.width / 4
        top: root.top - 50 
        text: str(root.pc_racket.score)

    Label:
        #scrore right player
        font_size: 70
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: str(root.player_racket.score)

    PinPongBall:
        id: pinpong_ball
        center: self.parent.center

    PinPongRacket:
        id: left_racket
        x: root.x + 10
        center_y: root.center_y

    PinPongRacket:
        id: right_racket
        x: root.width - self.width - 10
        center_y: root.center_y