#:kivy 1.0.9
#:import win kivy.core.window

<PinPongBall>:
    size: 50, 50
    canvas: 
        Ellipse:
            pos: self.pos
            size: self.size

<PinPongRacket>:
    size: 20, 150
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size

<Menu>:
    orientation: "vertical"
    spacing: "50sp"
    minimum_width: 760
    padding: dp(200), dp(50)

    canvas:
        Color:
            rgba: 138/255, 134/255, 134/255, 0.7

        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        text: "MENU"
        font_size: root.height * 0.15
        
    Button:
        text: "Игарть"
        font_size: self.height * 0.5
        on_release: root.start()

    Button:
        text: "Настройки"
        font_size: self.height * 0.5
        on_release: root.setting()

    Button:
        text: "Выход"
        font_size: self.height * 0.5
        on_release: root.exit_app()


<PinPongGame>:
    ball: pinpong_ball
    pc_racket: left_racket
    player_racket: right_racket
    menu: menu

    canvas:
        Rectangle:
        #slash place
            pos: self.center_x - 2.5, 0
            size: 5, self.height

    Label:
        #score left player
        font_size: 70
        center_x: root.width / 4
        top: root.top - 50 
        text: str(root.pc_racket.score)

    Label:
        #scrore right player
        font_size: 70
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: str(root.player_racket.score)

    PinPongBall:
        id: pinpong_ball
        center: self.parent.center

    PinPongRacket:
        id: left_racket
        x: root.x + 10
        center_y: root.center_y

    PinPongRacket:
        id: right_racket
        x: root.width - self.width - 10
        center_y: root.center_y

    Menu:
        id: menu
        size: 0.95 * root.width, 0.85 * root.height
        pos: 0.05*root.width/2, 0.10*root.width/2
    